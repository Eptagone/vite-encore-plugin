{
  "name": "vite-encore-plugin",
  "version": "0.1.2",
  "type": "module",
  "description": "A plugin to use Symfony Encore with Vite instead of Webpack. It produces an Encore compatible output using vite.",
  "keywords": [
    "vite",
    "plugin",
    "symfony",
    "encore"
  ],
  "author": "Quetzal Rivera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eptagone/vite-encore-plugin.git"
  },
  "bugs": "https://github.com/eptagone/vite-encore-plugin/issues",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/plugin/main.d.cts",
        "default": "./dist/plugin/main.cjs"
      },
      "default": {
        "types": "./dist/plugin/main.d.ts",
        "default": "./dist/plugin/main.js"
      }
    },
    "./builder": {
      "require": {
        "types": "./dist/plugin/builder.d.cts",
        "default": "./dist/plugin/builder.cjs"
      },
      "default": {
        "types": "./dist/plugin/builder.d.ts",
        "default": "./dist/plugin/builder.js"
      }
    },
    "./stimulus-bridge": {
      "require": {
        "types": "./dist/web/bridge.d.cts",
        "default": "./dist/web/bridge.cjs"
      },
      "default": {
        "types": "./dist/web/bridge.d.ts",
        "default": "./dist/web/bridge.js"
      }
    },
    "./stimulus-bridge/overrides": {
      "types": "./types/stimulus-bridge.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "tsup --sourcemap",
    "lint": "tsc && eslint src",
    "watch": "tsup --sourcemap --watch"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": "^16.20 || ^18.20 || ^20.19 || ^22.19 || >=24"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@hotwired/stimulus": "^3.2.2",
    "@preact/preset-vite": "^2.10.2",
    "@rollup/plugin-virtual": "^3.0.2",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "eslint": "^9.34.0",
    "eslint-plugin-jsdoc": "^54.3.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "lefthook": "^1.12.3",
    "postcss": "^8.5.6",
    "rollup": "^4.50.0",
    "svelte": "^5.38.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4"
  },
  "peerDependencies": {
    "@hotwired/stimulus": ">= 3.2.2",
    "@preact/preset-vite": ">= 2.9.4",
    "@rollup/plugin-virtual": ">= 3.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.5.3 || ^3.1.2 || ^4.0.4 || ^5.1.1 || >= 6.1.3",
    "@types/node": ">= 14",
    "@vitejs/plugin-react": "^4.2.0 || >= 5.x",
    "@vitejs/plugin-vue": "^4.6.2 || >= 5.x",
    "@vitejs/plugin-vue-jsx": "^3.0.2 || 4.x || >= 5.x",
    "svelte": "^3.59.2 || >= 4.x",
    "vite": "^4.5.14 || ^5.4.19 || 6.x || >= 7.x"
  },
  "peerDependenciesMeta": {
    "@hotwired/stimulus": {
      "optional": true
    },
    "@preact/preset-vite": {
      "optional": true
    },
    "@rollup/plugin-virtual": {
      "optional": true
    },
    "@sveltejs/vite-plugin-svelte": {
      "optional": true
    },
    "@types/node": {
      "optional": true
    },
    "@vitejs/plugin-react": {
      "optional": true
    },
    "@vitejs/plugin-vue": {
      "optional": true
    },
    "@vitejs/plugin-vue-jsx": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
